<Window x:Class="WpfApp_Raadspelletje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Raadspelletje"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="dateLabel" HorizontalAlignment="Left" Margin="525,95,0,0" VerticalAlignment="Top" Width="242" Height="30" Foreground="#FF286C83" FontStyle="Italic" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="192,204,0,0" TextWrapping="Wrap" Text="Geef een getal tussen 1 en 100:" VerticalAlignment="Top" Height="33" Width="223" FontSize="14" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.095"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Margin="400,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" Height="30"/>
        <TextBox x:Name="messageTextBox" HorizontalAlignment="Left" Height="37" Margin="202,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288"/>
        <TextBox x:Name="attemptsTextBox" HorizontalAlignment="Left" Height="37" Margin="202,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288"/>
        <Button x:Name="evaluateButton" HorizontalAlignment="Left" Margin="646,217,0,0" VerticalAlignment="Top" Height="45" Width="121" Content="Evalueer" Click="evaluateButton_Click"/>
        <Button x:Name="newButton" HorizontalAlignment="Left" Margin="646,282,0,0" VerticalAlignment="Top" Height="45" Width="121" Content="Nieuw" Click="newButton_Click"/>
        <Button x:Name="closeButton" Content="Einde" HorizontalAlignment="Left" Margin="646,346,0,0" VerticalAlignment="Top" Height="45" Width="121" Click="closeButton_Click"/>

    </Grid>
</Window>
